{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "outputs": ["dist/**", "storybook-static/**"],
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "cache": true,
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    },
    "format:check": {
      "outputs": [],
      "cache": true
    },
    "format:write": {
      "outputs": [],
      "cache": false
    },
    "files:check": {
      "outputs": [],
      "cache": true
    }
  }
}
